<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/home_drawer_lay"
    android:layout_height="match_parent"
    tools:context=".activity.DashBoardScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:elevation="9dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Dashboard"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/side_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_menu_24"
                android:tint="#ED663B"
                tools:ignore="UseAppTint" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_notifications_24"
                android:tint="#ED663B"
                tools:ignore="UseAppTint" />
        </RelativeLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigationn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            app:itemHorizontalTranslationEnabled="true"
            app:itemIconSize="28dp"
            app:itemIconTint="#ED663B"
            app:itemTextColor="#ED663B"
            app:menu="@menu/nevigationmenu" />




        <LinearLayout
            android:id="@+id/sdsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

                        <TextView
                            android:id="@+id/datat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:textColor="#454545"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:textStyle="bold" />


            <TextView
                android:id="@+id/locationnnv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="#454545"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deviceid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="center"
                android:textColor="#454545"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/VIN_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="center"
                android:textColor="#454545"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <androidx.cardview.widget.CardView
                    android:id="@+id/changestatus"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="5"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/statuscard"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            app:cardBackgroundColor="#ED663B"
                            app:cardCornerRadius="50dp">

                            <TextView
                                android:id="@+id/singalstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="s"
                                android:textAllCaps="true"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@+id/statuscard"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/fullstatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Status"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/driveingtiming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:textAlignment="center"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/ondutytiming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:visibility="gone"
                                android:textAlignment="center"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/sleeptiming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:textAlignment="center"
                                android:visibility="gone"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/offdutytiming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:textAlignment="center"
                                android:textColor="#3A3A3A"
                                android:visibility="gone"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/yardtiming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:visibility="gone"
                                android:textAlignment="center"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/personaltiming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:visibility="gone"
                                android:textAlignment="center"
                                android:textColor="#3A3A3A"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/onoffbluetooth"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="5"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/onblue"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/connect"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/offblue"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/disconect" />


                        <TextView
                            android:id="@+id/conectionstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:singleLine="true"
                            android:text="Connecting.."
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/myframelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomnavigationn"
            android:layout_below="@+id/sdsd" />



    </RelativeLayout>

    <fragment
        android:id="@+id/drawer_view"
        android:name="com.example.eld.fragments.SideNavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_side_menu_fragment"/>
</androidx.drawerlayout.widget.DrawerLayout>