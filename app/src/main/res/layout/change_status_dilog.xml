<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:backgroundTint="#fff"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/drive"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#fff"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                        android:src="@drawable/streeing"
                        android:tint="@color/primaryColor"
                        android:layout_marginStart="10dp"
                        tools:ignore="UseAppTint" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Drive"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/onduty"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#fff"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_toggle_on_24"
                        android:tint="@color/primaryColor"
                        android:layout_marginStart="10dp"
                        tools:ignore="UseAppTint" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On duty"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sleep"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#fff"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_airline_seat_individual_suite_24"
                        android:tint="@color/primaryColor"
                        android:layout_marginStart="10dp"
                        tools:ignore="UseAppTint" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sleep berth"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/offduty"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#fff"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_toggle_off_24"
                        android:tint="@color/primaryColor"
                        android:layout_marginStart="10dp"
                        tools:ignore="UseAppTint" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Off duty"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/yard"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#fff"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_fire_truck_24"
                        android:tint="@color/primaryColor"
                        android:layout_marginStart="10dp"
                        tools:ignore="UseAppTint" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yard move"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/personaluse"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#fff"
                android:elevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_person_24"
                        android:tint="@color/primaryColor"
                        android:layout_marginStart="10dp"
                        tools:ignore="UseAppTint" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal use"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>